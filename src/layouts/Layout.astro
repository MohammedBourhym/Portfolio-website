---
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import BlurCircle from "@/components/shared/BlurCircle.astro";
import theme from "@/data/theme";

import "@/styles/global.css";
import "@/styles/print.css";

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Mohammed Bourhym | Software Engineer & DevOps Enthusiast", 
  description = "Software engineering student passionate about DevOps and web development. Mohammed Bourhym specializes in modern web technologies and cloud infrastructure. Available for internships and collaboration." 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    
    <!-- SEO Meta Tags -->
    <meta name="author" content="Mohammed Bourhym" />
    <meta name="keywords" content="Mohammed Bourhym, Bourhym, Software Engineer, DevOps Engineer, Web Developer, Portfolio, GEIW, Morocco Developer, Moroccan Developer, JavaScript, TypeScript, React, Node.js, Astro, Tailwind CSS, Full Stack Developer, Frontend Developer, Backend Developer, Cloud Computing, AWS, Docker, Kubernetes, CI/CD, Git, GitHub, LinkedIn" />
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="language" content="English" />
    <meta name="geo.region" content="MA" />
    <meta name="geo.country" content="Morocco" />
    <meta name="geo.placename" content="Morocco" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://bourhym.me" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://bourhym.me/images/me.jpeg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Mohammed Bourhym - Software Engineer & DevOps Enthusiast" />
    <meta property="og:site_name" content="Mohammed Bourhym Portfolio" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://bourhym.me" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://bourhym.me/images/me.jpeg" />
    <meta property="twitter:image:alt" content="Mohammed Bourhym - Software Engineer Portfolio" />
    <meta property="twitter:creator" content="@bourhym" />
    <meta property="twitter:site" content="@bourhym" />
    
    <!-- Additional SEO -->
    <link rel="canonical" href="https://bourhym.me" />
    <meta name="theme-color" content="#f97316" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Mohammed Bourhym",
        "alternateName": ["Bourhym", "Mohammed", "Mo Bourhym"],
        "jobTitle": "Software Engineer",
        "description": "Software engineering student passionate about DevOps and web development. Mohammed Bourhym specializes in modern web technologies and cloud infrastructure.",
        "url": "https://bourhym.me",
        "image": "https://bourhym.me/images/me.jpeg",
        "sameAs": [
          "https://github.com/MoBourhym",
          "https://www.linkedin.com/in/mohammed-bourhym-733b91274/"
        ],
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "Morocco"
        },
        "email": "simobourhym01@gmail.com",
        "knowsAbout": [
          "Software Engineering",
          "DevOps",
          "Web Development",
          "JavaScript",
          "TypeScript",
          "React",
          "Node.js",
          "Astro",
          "Tailwind CSS",
          "Cloud Computing",
          "Docker",
          "Kubernetes",
          "CI/CD"
        ],
        "alumniOf": {
          "@type": "Organization",
          "name": "GEIW"
        }
      }
    </script>
    
    <title>{title}</title>
  </head>
  <body
    class="mx-auto flex min-h-screen max-w-[1200px] flex-col gap-9 bg-white dark:bg-neutral-950 px-10 py-8 text-sm text-neutral-700 dark:text-neutral-400 md:gap-20 md:py-16 transition-colors duration-300"
  >
    <Header />
    <BlurCircle position="top" color={theme.colors.blur.top} />
    <BlurCircle position="bottom" color={theme.colors.blur.bottom} />
    <slot />
    <Footer/>
  </body>
</html>
