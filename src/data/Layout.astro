---
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import BlurCircle from "@/components/shared/BlurCircle.astro";
import theme from "@/data/theme";
import SEOTags from "@/components/seo/SEOTags.astro";
import type { HeadTags } from "@/utils/types/HeadTags";

import "@/styles/global.css";
import "@/styles/print.css";

export type Props = HeadTags;

const { 
  title = "Mohammed Bourhym | Software Engineer & DevOps Enthusiast", 
  description = "Software engineering student passionate about DevOps and web development. Mohammed Bourhym specializes in modern web technologies and cloud infrastructure. Available for internships and collaboration." 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- SEO Meta Tags -->
    <meta name="author" content="Mohammed Bourhym" />
    <meta name="keywords" content="Mohammed Bourhym, Bourhym, Software Engineer, DevOps, Web Developer, Portfolio, GEIW, Morocco Developer, JavaScript, TypeScript, React, Node.js" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://bourhym.me" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://bourhym.me/images/me.jpeg" />
    <meta property="og:site_name" content="Mohammed Bourhym Portfolio" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://bourhym.me" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://bourhym.me/images/me.jpeg" />
    
    <!-- Additional SEO -->
    <link rel="canonical" href="https://bourhym.me" />
    <meta name="theme-color" content="#f97316" />
    
    <title>{title}</title>
  </head>
  <body
    class="mx-auto flex min-h-screen max-w-[1200px] flex-col gap-9 bg-white dark:bg-neutral-950 px-10 py-8 text-sm text-neutral-700 dark:text-neutral-400 md:gap-20 md:py-16 transition-colors duration-300"
  >
    <Header />
    <BlurCircle position="top" color={theme.colors.blur.top} />
    <BlurCircle position="bottom" color={theme.colors.blur.bottom} />
    <slot />
    <Footer/>
  </body>
</html>